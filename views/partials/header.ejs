                <a class='nav-link' href="/logout"><button class="btn my-2 my-sm-0 btn-outline-secondary" type="button"><i class="fas fa-sign-out-alt"></i>Log Out</button></a>
            <% } else { %>
                <a class='nav-link' href="/auth/google"><button class="btn my-2 my-sm-0 btn-outline-secondary" type="button"><i class="fas fa-sign-in-alt"></i>Log In with Google</button></a>
